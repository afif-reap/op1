{
	"name": "op1",
	"private": true,
	"version": "0.0.0",
	"description": "op1 - OpenCode harness with batteries included",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun --filter '*' build",
		"typecheck": "bun --filter '*' typecheck",
		"dev": "bun --filter '*' dev",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:install": "bun test packages/install",
		"test:notify": "bun test packages/notify",
		"test:workspace": "bun test packages/workspace",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"clean": "rm -rf packages/*/dist packages/*/*.js node_modules/.cache"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@huggingface/transformers": "^3.8.1",
		"@types/bun": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "bun@1.2.0"
}
