{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ESNext"],
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@op1/notify": ["packages/notify/src/index.ts"],
			"@op1/notify/*": ["packages/notify/src/*"],
			"@op1/workspace": ["packages/workspace/src/index.ts"],
			"@op1/workspace/*": ["packages/workspace/src/*"],
			"@op1/create": ["packages/create/src/index.ts"],
			"@op1/create/*": ["packages/create/src/*"]
		}
	},
	"exclude": ["node_modules", "dist", "**/dist"]
}
